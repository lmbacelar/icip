!!!
%html

  %head
    %title= yield(:title) || 'Untitled'
    %meta{'http-equiv'=>'Content-Type', :content=>'text/html; charset=utf-8'}/
    = stylesheet_link_tag 'application', 'http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/base/jquery-ui.css'
    = javascript_include_tag 'application'
    = csrf_meta_tag
    = yield(:head)

  %body
    #header
      %h1 ICIP - Interior Cabin Inspection Program
    #main
      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}"

      = yield
    #footer
      2011 by
      = mail_to 'lbacelar@tap.pt', 'Luis Bacelar'
