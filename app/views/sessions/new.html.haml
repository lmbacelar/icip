= title "Log In#{current_user ? ' as a different user' : ''}"

.columns
  .fix.left
    = form_tag sessions_path do
      = group_tag title: 'User Credentials', show_hide_links: false, content_class: 'simple_form' do
        = label_tag :login, 'E-Mail or TAP Nr.'
        .input= text_field_tag :login
        = label_tag :password
        .input= password_field_tag :password
        = submit_tag 'Log In', disable_with: 'Please Wait ...'
        %br
        %br

.actions
  =# link_to 'Back to Home Page', root_url


