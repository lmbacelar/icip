= simple_form_for target do |f|
  = f.error_messages

  .columns
    .fix.left
      .group
        .title Layout
        .item_location
        - @zone.images.each do |i|
          .selector= image_tag i.file_url.to_s
          - i.locations.each do |o|
            .location_link{ data: { location: o.to_json }}= o.name

    .fix.right
      .group
        .title Item
        .content
          = f.input :name, input_html: { size: 4 }
          = f.input :part_number, input_html: { size: 20, data: {autocomplete_source: parts_path} }
          = f.input :image_location, input_html: { size: 20 }
    = f.submit
