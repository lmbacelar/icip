%table
  %thead
    %tr
      - if info == :full
        %th State
        %th Aircraft
        %th Zone
      %th Action
      %th Item
      %th Description
      %th ETR
      %th Closing Date
      %th
  %tfoot
    %tr
      %td{colspan: info == :full ? 9 : 6}
  %tbody
    = render partial: 'tascs/table_row', collection: tascs, as: :a, locals: { info: info }
