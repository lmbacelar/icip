%tr{class: cycle('', 'alt')}
  - if info == :full
    %td= a.state
    %td= a.aircraft_registration
    %td= a.zone_name
  %td= a.action
  %td= a.item_name
  %td= a.checkpoint_description
  %td= a.etr
  %td= I18n.l(a.closing.try(:updated_at), format: :short_date) if a.closing.present?
  %td
    %ul.icons
      - if can? :read, a
        %li= icon_to 'Show', a
      - if can? :update, a
        %li= icon_to 'Edit', edit_tasc_path(a)
      - if can? :destroy, a
        %li= icon_to 'Destroy', a, confirm: 'Are you sure?', method: :delete
