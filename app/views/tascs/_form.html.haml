= simple_form_for [@inspection, @item, @tasc] do |f|
  = f.error_messages
  .columns
    .fix.left
      .group
        .title Inspection Protocol
        .selector= render @item.part.protocols.current.images

    .fix.right
      .group
        .title Details
        .inputs
          = f.association :checkpoint, collection: @item.part.protocols.current.checkpoints.sort_natural, prompt: '(Select one)'
          = f.input :action, collection: Tasc::Actions, prompt: '(Select one)'
          = f.input :etr, collection: Tasc::Etrs, label: 'ETR', prompt: '(Select one)'
          = f.input :comment
        .clear
      = f.submit

