#title= title 'Inspections'

= render file: 'shared/search_form', locals: { object_class: Inspection, target: inspections_path }
- if @inspections.empty?
  = render file: 'shared/no_search_results', locals: { search: params[:query],
                                                       preset: params[:preset] }
- else
  .group
    .title
      Search Results
      = links_to_export separator: " | "
    .content
      = render 'table', inspections: @inspections
