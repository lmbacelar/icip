- title 'Aircraft'

= render @aircraft, { :group_title => 'Details' }

- if @aircraft.configurations.any?
  =# render :file => 'configurations/_configurations', :locals => { :configurations => @aircraft.configurations }

.actions
  = link_to 'View All Aircrafts', aircrafts_path
  |
  = link_to 'Edit Aircraft', edit_aircraft_path(@aircraft)
  |
  =# link_to 'New Configuration', new_aircraft_configuration_path(@aircraft)
  |
  = link_to 'Destroy Aircraft', @aircraft, :confirm => 'Are you sure?', :method => :delete

