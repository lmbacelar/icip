- title 'Aircrafts'

%table
  %tr
    %th Registration
    %th Manufacturer
    %th Model
    %th
  - @aircrafts.each do |a|
    %tr{:class => cycle('', 'alt')}
      %td= a.registration
      %td= a.manufacturer
      %td= a.model
      %td
        %ul.icons
          %li= icon_to 'Show', a
          %li= icon_to 'Edit', edit_aircraft_path(a)
          %li= icon_to 'Destroy', a, :confirm => 'Are you sure?', :method => :delete

.actions
  = link_to 'New Aircraft', new_aircraft_path

